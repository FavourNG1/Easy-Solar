-- SQL schema (run this in your database client or an SQLite console)
CREATE TABLE users (
    id INTEGER PRIMARY KEY,
    name TEXT,
    phone_number TEXT,
    email TEXT,
    balance FLOAT DEFAULT 0,
    last_payment_date TIMESTAMP
);

CREATE TABLE payments (
    id INTEGER PRIMARY KEY,
    user_id INTEGER,
    amount FLOAT,
    payment_date TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
    status TEXT,
    FOREIGN KEY (user_id) REFERENCES users(id)
);

CREATE TABLE usage (
    id INTEGER PRIMARY KEY,
    user_id INTEGER,
    usage_start TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
    usage_end TIMESTAMP,
    status TEXT, -- e.g., 'active', 'expired'
    FOREIGN KEY (user_id) REFERENCES users(id)
);
